{
  "name": "mirco-lc-platform",
  "version": "1.0.0",
  "description": "微前端低代码平台",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "apps/mainframe/**/*.{js,jsx,ts,tsx}": [
      "cd apps/mainframe && pnpm run lint:fix",
      "prettier --write"
    ],
    "apps/renderer/**/*.{vue,js,ts}": [
      "cd apps/renderer && pnpm run lint:fix",
      "prettier --write"
    ],
    "libs/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,less}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "micro-frontend",
    "low-code",
    "react",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "^8.45.0",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
